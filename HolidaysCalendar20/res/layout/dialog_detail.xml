<com.jonnygold.holidays.calendar.HolidayDetailView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
 	android:layout_height="match_parent"
 	android:orientation="vertical" >
 		
	<LinearLayout 
	    android:layout_width="match_parent"
	 	android:layout_height="wrap_content"
	 	android:orientation="horizontal" 
	 	android:gravity="center" >
	 	
	    <TextView
			android:id="@+id/view_txt_holiday_date"
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"
		 	android:textSize="12sp" />
	    
	    <ImageView
			android:id="@+id/view_img_info_flag_1"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/hole" 
			android:contentDescription="@string/app_name" />
	    
	    <ImageView
			android:id="@+id/view_img_info_flag_2"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/hole"
			android:contentDescription="@string/app_name" />
	    
	    <ImageView
			android:id="@+id/view_img_info_flag_3"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/hole"
			android:contentDescription="@string/app_name" />
	    
	    <ImageView
			android:id="@+id/view_img_info_flag_4"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/hole"
			android:contentDescription="@string/app_name" />

	</LinearLayout>
	
    
    <LinearLayout
	 	android:layout_width="match_parent"
	 	android:layout_height="wrap_content"
	 	android:orientation="horizontal" >
	 	
	 	
		<ImageView
	 		android:id="@+id/view_img_holiday_picture"
	 		android:layout_width="match_parent"
	 		android:layout_height="wrap_content"
	 		android:layout_weight="0.80"
	 		android:layout_marginLeft="6dp"
	 		android:src="@drawable/ic_launcher"
	 		android:contentDescription="@string/app_name" />
		
		<TextView
			android:id="@+id/view_txt_holiday_title"
	 		android:layout_width="match_parent"
	 		android:layout_height="wrap_content"
	 		android:layout_weight="0.20"
	 		android:layout_gravity="center_vertical"
	 		android:layout_marginLeft="10dp"
		 	android:textSize="16sp"/>
		
	</LinearLayout>
	
    	
    <View
	    android:layout_width="wrap_content"
	    android:layout_height="2dp"
	    android:background="#FF222222" />    
	
    <ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
		
	    <TextView
			android:id="@+id/view_txt_holiday_description"
			android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	        android:textSize="13sp"
	        android:layout_marginLeft="6dp"
	        android:layout_marginRight="6dp" />	
	        
    </ScrollView> 
	
</com.jonnygold.holidays.calendar.HolidayDetailView>